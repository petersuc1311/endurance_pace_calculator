<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiMinutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_4"
       style="@style/TimeInputTextAppearance"
        android:hint="@string/hint_minutes"
        app:layout_constraintEnd_toStartOf="@+id/tvColon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tiLayoutUnits"
        app:layout_constraintBottom_toBottomOf="@id/tiLayoutUnits" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFirst"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvColon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintBottom_toBottomOf="@+id/tiMinutes"
        app:layout_constraintEnd_toStartOf="@+id/tiSeconds"
        app:layout_constraintStart_toEndOf="@+id/tiMinutes"
        app:layout_constraintTop_toTopOf="@+id/tiMinutes" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiSeconds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4"
        android:layout_marginEnd="@dimen/dimen_4"
        style="@style/TimeInputTextAppearance"
        android:hint="@string/hint_seconds"
        app:layout_constraintEnd_toStartOf="@+id/tvSlash"
        app:layout_constraintStart_toEndOf="@+id/tvColon"
        app:layout_constraintTop_toTopOf="@id/tiLayoutUnits"
        app:layout_constraintBottom_toBottomOf="@id/tiLayoutUnits"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSecond"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintBottom_toBottomOf="@+id/tiMinutes"
        app:layout_constraintEnd_toStartOf="@+id/tiLayoutUnits"
        app:layout_constraintStart_toEndOf="@+id/tiSeconds"
        app:layout_constraintTop_toTopOf="@+id/tiMinutes" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiLayoutUnits"
        style="@style/DropDownInputLayoutTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guidelineSecond"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/unitsDropDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>