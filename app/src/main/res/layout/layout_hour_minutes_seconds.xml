<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiHours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_4"
        style="@style/TimeInputTextAppearance"
        android:hint="@string/hint_hours"
        app:layout_constraintEnd_toStartOf="@+id/tvColonFirst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFirst"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvColonFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintBottom_toBottomOf="@+id/tiHours"
        app:layout_constraintEnd_toStartOf="@+id/tiMinutes"
        app:layout_constraintStart_toEndOf="@+id/tiHours"
        app:layout_constraintTop_toTopOf="@+id/tiHours" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiMinutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4"
        android:layout_marginEnd="@dimen/dimen_4"
        style="@style/TimeInputTextAppearance"
        android:hint="@string/hint_minutes"
        app:layout_constraintEnd_toStartOf="@+id/tvColonSecond"
        app:layout_constraintStart_toEndOf="@+id/tvColonFirst"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSecond"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvColonSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintBottom_toBottomOf="@+id/tiHours"
        app:layout_constraintEnd_toStartOf="@+id/tvSeconds"
        app:layout_constraintStart_toEndOf="@+id/tiMinutes"
        app:layout_constraintTop_toTopOf="@+id/tiHours" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tvSeconds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4"
        style="@style/TimeInputTextAppearance"
        android:hint="@string/hint_seconds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvColonSecond"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>