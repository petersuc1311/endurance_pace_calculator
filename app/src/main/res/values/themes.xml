<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EndurancePaceCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_200</item>
        <item name="colorSecondaryVariant">@color/blue_grey_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="sliderStyle">@style/Widget.App.Slider</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbColor">@color/blue_grey_dark_700</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/blue_grey_200</item>
        <item name="colorOnPrimary">@color/blue_grey_700</item>
        <item name="colorOnSurface">@color/blue_grey_200</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabIndicatorColor">@color/amber_400</item>
        <item name="tabTextColor">@color/blue_grey_dark_700</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/blue_grey_dark_700</item>
        <item name="colorOnPrimary">@color/blue_grey_200</item>
        <item name="colorOnSurface">@color/blue_grey_dark_700</item>
    </style>

    <style name="DropDownInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
    </style>

    <style name="ZonesInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>

    </style>

    <style name="LabelsTheme" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="alpha">0.8</item>
    </style>

    <style name="ListItemTheme" parent="TextAppearance.MaterialComponents.Body1" />


    <style name="InputTextAppearance">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="BpmFtpInputTextAppearance" parent="InputTextAppearance">
        <item name="android:maxLength">3</item>
    </style>

    <style name="TimeValuesTextViewAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="maxLines">1</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>